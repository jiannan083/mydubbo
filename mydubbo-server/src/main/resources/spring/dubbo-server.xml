<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd        
       http://code.alibabatech.com/schema/dubbo 
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    
    <!-- 注册dubbo服务的应用名称 -->
	<dubbo:application name="mydubbo-server" />
	<!-- 配置zookeeper注册中心的服务地址 -->
	<dubbo:registry address="zookeeper://180.76.180.175:2181" check="false" />
	<!-- 配置端口 -->
	<dubbo:protocol name="dubbo" port="20880" />

	<!-- timeout:毫秒 -->
	<dubbo:service interface="cn.wangjiannan.api.service.UserService" ref="userService" timeout="30000"/>
 </beans>