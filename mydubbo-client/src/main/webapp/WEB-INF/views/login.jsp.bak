<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<%
	String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+request.getContextPath(); 
%>
<title>爱钱进.借啊后台管理系统</title>
<link rel="stylesheet" type="text/css" href="<%=basePath %>/common/css/login.css">
<style>
	* {
		margin: 0px;
		padding: 0px;
	}
	.main {
		position: relative;
	}
	.main .txt {
		width: 220px;
		border: 1px solid #e0e0e0;
		height: 25px;
		line-height: 25px;
	}
	.itembtn {
		text-align: center;
		margin-top: 10px;
	}
	.main .error {
		position: absolute;
		left: 0px;
		bottom: 80px;
		z-index: 1;
		height: 30px;
		line-height: 30px;
		vertical-align: middle;
		border-radius: 3px;
		color: #f00;
		width: 100%;
	}
	.loaded .error {
		bottom: 20px;
		-webkit-transition:all 0.3s linear;
		transition:all 0.3s linear;
	}
</style>
</head>
<body>
<!-- 	<div class="container"> -->
<!-- 		<div class="title"> -->
<!-- 			欢迎使用后台管理系统 -->
<!-- 		</div> -->
		<div class="main" id="report_login">
			<img src="<%=basePath %>/image/login_logo.png" class="report_logo"/>	
			<div class="report_main">
			<div class="report_content">
			
			<form action="<%=basePath%>/login" method="post">
<!-- 				<div class="item"> -->
<!-- 					<label>邮箱：</label> -->
					<input class="txt" id="username" name="username" type="text" value="" placeholder="用户名"/>
<!-- 				</div> -->
<!-- 				<div class="item"> -->
<!-- 					<label>密码：</label> -->
					<input class="txt" id="password" name="password" type="password" placeholder="密码"/>
<!-- 				</div> -->
				<div class="error" }>${error}</div>
				<div class="item itembtn">
					<input id="btn" class="btn entry" type="submit" value="登录"/>
				</div>
				
				<input class="txt" id="checkEmail" name="checkEmail"  type="hidden" value="${staffObj.email}" />
			</form>
				<div style="clear:both;"></div>
			</div>
		</div>
		<div class="footer_box">			
			<p class="report_footer">© 2014 普惠金融 | 沪ICP备13029326号</p>
		</div>
	</div>
	<script>
		window.onload = function(){
			var explorer = window.navigator.userAgent ;
			if(explorer.indexOf("Chrome") >= 0){
				console.log("Chrome");
			}else{
				alert("该系统目前只支持Chrome浏览器，其他浏览器可能会存在页面显示错乱问题，建议使用Chrome浏览器！");
			}
			document.getElementsByTagName("body")[0].setAttribute("class","loaded");
			var email=document.getElementById("checkEmail").value;
			if(email){
				document.getElementById("username").value=email;
			}
		}
		
	</script>
</body>
</html>